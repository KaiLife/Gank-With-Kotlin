<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:background="@color/divider_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_img" />

        <TextView
            android:drawableLeft="@mipmap/github"
            android:drawablePadding="5dp"
            android:background="@android:color/white"
            android:id="@+id/tv_github"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:padding="8dp"
            android:drawableRight="@mipmap/ic_right"
            android:text="我的GitHub"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/blog"
            android:id="@+id/tv_blog"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:drawableRight="@mipmap/ic_right"
            android:text="我的博客"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_github"
            app:layout_constraintStart_toStartOf="@+id/tv_github"
            app:layout_constraintTop_toBottomOf="@+id/tv_github" />

        <TextView
            android:drawableLeft="@mipmap/csdn"
            android:drawableRight="@mipmap/ic_right"
            android:drawablePadding="5dp"
            android:id="@+id/tv_csdn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:text="我的CSDN"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_blog"
            app:layout_constraintStart_toStartOf="@+id/tv_blog"
            app:layout_constraintTop_toBottomOf="@+id/tv_blog" />
    </android.support.constraint.ConstraintLayout>
</layout>